@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div ng-controller="rolemasterController">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Manage Roles</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">USER ROLE</li>
            <li class="breadcrumb-item active" aria-current="page">
                <a asp-controller="userrole" asp-action="index">HOME</a>
            </li>
        </ol>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="card mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">Create new role</h6>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        @*<label for="exampleInputEmail1"></label>*@
                        <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"
                            placeholder="Enter role name">
                        <small id="emailHelp" class="form-text text-muted">
                            Do not enter space
                        </small>
                    </div>
                    <div class="form-group">
                        <button type="button" class="btn btn-light btn-outline-success">Create Role</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12 mb-4">
            <!-- Simple Tables -->
            <div class="card">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">Application Roles</h6>
                </div>
                <div class="table-responsive">
                    <table class="table align-items-center table-flush" ng-init="getRoles()">
                        <thead class="thead-light">
                            <tr>
                                <th>Role ID</th>
                                <th>Role Name</th>
                                <th>Created By</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="role in roles">
                                <td>{{role.roleId}}</td>
                                <td>{{role.roleName}}</td>
                                <td>{{role.createdByName}}</td>
                                <td>
                                    <span class="badge badge-success" ng-show="role.isActive">Active</span>
                                    <span class="badge badge-danger" ng-hide="role.isActive">Not Active</span>
                                </td>
                                <td>
                                    <a href="javascript:;" ng-click="deleteRole(role.roleId)"
                                        class="btn btn-danger btn-icon-split">
                                        <span class="icon text-white-50">
                                            <i class="fas fa-trash"></i>
                                        </span>
                                        <span class="text">Delete</span>
                                    </a>
                                    <a href="javascript:;" class="btn btn-success btn-icon-split">
                                        <span class="icon text-white-50">
                                            <i class="fas fa-check"></i>
                                        </span>
                                        <span class="text">Update</span>
                                    </a>
                                </td>
                            </tr>
                            <tr ng-show="isNoRecordFound">
                                <td colspan="5" class="text-danger">No record found</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="card-footer"></div>
            </div>
        </div>
    </div>
</div>



@section Scripts
{

<script src="~/apps/controllers/rolemaster.controller.js"></script>
<script src="~/apps/services/userrole.service.js"></script>
}
