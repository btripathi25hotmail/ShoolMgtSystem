<div class="row" id="roleListDiv" ng-if="showListLayout">
    <div class="col-lg-12 mb-4">
        <!-- Simple Tables -->
        <div class="card">
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">Application Roles</h6>
            </div>
            <div class="table-responsive">
                <table class="table align-items-center table-flush" ng-init="getRoles()">
                    <thead class="thead-light">
                        <tr>
                            @* <th>Role ID</th> *@
                            <th>Role Name</th>
                            <th>Created By</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="role in roles">
                            @* <td>{{role.roleId}}</td> *@
                            <td>{{role.roleName}}</td>
                            <td>{{role.createdByName}}</td>
                            <td>
                                <span class="badge badge-success" ng-show="role.isActive">Active</span>
                                <span class="badge badge-danger" ng-hide="role.isActive">Deactive</span>
                            </td>
                            <td>
                                <a href="javascript:;" ng-click="showDeleteModal(role.roleId)"
                                    class="btn btn-danger btn-icon-split">
                                    <span class="icon text-white-50">
                                        <i class="fas fa-trash"></i>
                                    </span>
                                    <span class="text">Delete</span>
                                </a>
                                <a href="javascript:;" ng-click="showEditDiv(role)"
                                    class="btn btn-success btn-icon-split">
                                    <span class="icon text-white-50">
                                        <i class="fas fa-check"></i>
                                    </span>
                                    <span class="text">Update</span>
                                </a>
                            </td>
                        </tr>
                        <tr ng-show="isNoRecordFound">
                            <td colspan="5" class="text-danger">No record found</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="card-footer"></div>
        </div>
    </div>
</div>

<div class="modal fade" id="roleDeleteModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabelLogout"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabelLogout">Ohh No!</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p class="text-danger">Do you want to delete this record?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-primary" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" ng-click="deleteRole(roleId)">Delete</button>
            </div>
        </div>
    </div>
</div>